<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lilitam.andyciu.lianliankan.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="70sp">

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView01"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView02"
                android:layout_weight="1" />

            <ImageView
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView03"
                android:layout_weight="1"
                android:layout_width="60sp"
                android:layout_height="60sp" />

            <ImageView
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView04"
                android:layout_weight="1"
                android:layout_width="60sp"
                android:layout_height="60sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="70sp">

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView05"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView06"
                android:layout_weight="1" />

            <ImageView
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView07"
                android:layout_weight="1.05"
                android:layout_width="60sp"
                android:layout_height="60sp" />

            <ImageView
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView08"
                android:layout_weight="1"
                android:layout_width="60sp"
                android:layout_height="60sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="70sp">

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView09"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView10"
                android:layout_weight="1" />

            <ImageView
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView11"
                android:layout_weight="1"
                android:layout_width="60sp"
                android:layout_height="60sp" />

            <ImageView
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView12"
                android:layout_weight="1"
                android:layout_width="60sp"
                android:layout_height="60sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView13"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView14"
            android:layout_weight="1" />

        <ImageView
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView15"
            android:layout_weight="1"
            android:layout_width="60sp"
            android:layout_height="60sp" />

        <ImageView
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView16"
            android:layout_weight="1"
            android:layout_width="60sp"
            android:layout_height="60sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="時間 : "
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_time1"
                android:textSize="30sp" />

            <TextView
                android:text="2"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:textSize="30sp" />

            <TextView
                android:text="秒"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_time2"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="已配對數："
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_f1"
                android:textSize="30sp" />

            <TextView
                android:text="2"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_finish"
                android:textSize="30sp" />

            <TextView
                android:text="個"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_f2"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="1">

            <TextView
                android:text="剩餘配對數："
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_nf1"
                android:textSize="30sp" />

            <TextView
                android:text="2"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_Xfinish"
                android:textSize="30sp" />

            <TextView
                android:text="個"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_nf2"
                android:layout_weight="1"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:text="重新開始"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_restart"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
